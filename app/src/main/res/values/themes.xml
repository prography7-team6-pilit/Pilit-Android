<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pilit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:timePickerStyle">@style/SpinnerTimePicker</item>
    </style>

    <style name="BorderEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/edittext_default_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="colorError">@color/edittext_error</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="DefaultSwitchStyle" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="android:switchMinWidth">32dp</item>
        <item name="android:thumb">@drawable/shape_default_switch_thumb</item>
        <item name="track">@drawable/selector_default_switch_track</item>
    </style>

    <style name="SpinnerTimePicker" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>